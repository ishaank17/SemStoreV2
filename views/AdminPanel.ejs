<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Panel | Sem-Store</title>
    <link href="/src/new.css" rel="stylesheet">
    <link rel="icon" type="image/png" href="/icons/favicon-96x96.png" sizes="96x96" />
    <link rel="icon" type="image/svg+xml" href="/icons/favicon.svg" />
    <link rel="shortcut icon" href="/icons/favicon.ico" />
    <link rel="apple-touch-icon" sizes="180x180" href="/icons/apple-touch-icon.png" />
    <meta name="apple-mobile-web-app-title" content="SemStore" />
<!--    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>-->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">
    <script src="/js/getSub.js"></script>
</head>

<body class="min-h-screen  flex flex-col text-gray-800">
<%- include('navbar.ejs') %>

<main class=" flex-grow">
<!--    max-w-7xl mx-auto px-4 py-10-->
    <header class="text-center py-8  bg-blue-100">
        <h1 class="text-3xl font-bold text-blue-600 text-center mb-8">Admin Dashboard</h1>
        <button type="button" onclick="sendNotification()" class="bg-blue-600 text-white p-2 rounded-r-lg hover:bg-blue-700 transition flex items-center justify-center " aria-label="Search">
        Send Notification
        </button>
            <script>
            function sendNotification() {
                console.log('Sending notification...');
                let msg="This is a message from admin";
                fetch(`/AdminPanel/Notify/${msg}`)
                    .then(response => {
                        if (!response.ok) throw new Error("Failed to send notification");
                        return response.json();
                    })
                    .then(data => {
                        alert("Notification sent successfully!");
                    })
                    .catch(error => {
                        alert("Error: " + error.message);
                    });
            }
        </script>
        <!-- Admin Cards -->
        <section class="grid grid-cols-1 md:grid-cols-3 gap-6 max-w-7xl mx-auto px-4 py-10">
            <!-- Users Card -->
            <div class="bg-white rounded-2xl shadow-md p-6 hover:shadow-lg transition-all">
                <h2 class="text-xl font-semibold text-blue-600 mb-2">User Management</h2>
                <p class="text-gray-700 text-sm mb-4">View and manage all registered users, roles and permissions.</p>
                <a href="/AdminPanel/Users" class="inline-block px-4 py-2 bg-blue-600 text-white rounded-lg text-sm font-medium hover:bg-blue-700 transition">Manage Users</a>
            </div>

            <!-- Resources Card -->
            <div class="bg-white rounded-2xl shadow-md p-6 hover:shadow-lg transition-all">
                <h2 class="text-xl font-semibold text-blue-600 mb-2">Resource Moderation</h2>
                <p class="text-gray-700 text-sm mb-4">Delete files and view flagged or outdated resources .</p>
                <a href="/AdminPanel/Content" class="inline-block px-4 py-2 bg-blue-600 text-white rounded-lg text-sm font-medium hover:bg-blue-700 transition">Moderate Resources</a>
            </div>

            <!-- Reports Card -->
            <div class="bg-white rounded-2xl shadow-md p-6 hover:shadow-lg transition-all">
                <h2 class="text-xl font-semibold text-blue-600 mb-2">Reports & Feedback</h2>
                <p class="text-gray-700 text-sm mb-4">Review user-submitted reports and feedback to improve the app.</p>
                <a href="/AdminPanel/Reports" class="inline-block px-4 py-2 bg-blue-600 text-white rounded-lg text-sm font-medium hover:bg-blue-700 transition">View Reports</a>
            </div>
        </section>
    </header>


    <!-- Stats (Optional Enhancement) -->
    <section class="mt-10 grid grid-cols-1 md:grid-cols-2 gap-6 max-w-7xl mx-auto px-4 py-10 ">
        <div class="bg-white rounded-2xl shadow-md p-6">
            <h3 class="text-lg font-semibold text-blue-700 mb-4">Quick Stats</h3>
            <ul class="space-y-2 text-sm">
                <li class="font-medium"><span  >Total Users:</span> <span id="users"></span></li>
                <li class="font-medium"><span  >Uploaded Resources:</span> <span id="resources"></span></li>
                <li class="font-medium"><span >Reports This Week:</span>#Placeholder</li>
            </ul>
        </div>
        <div class="bg-white rounded-2xl shadow-md p-6">
            <h3 class="text-lg font-semibold text-blue-700 mb-4">Notices</h3>
            <ul class="text-sm text-gray-700 list-disc pl-4 space-y-2">
                <li>Placeholder may work later </li>
                <li>Placeholder may work later</li>
                <li>Placeholder may work later</li>
            </ul>
        </div>
    </section>
</main>

<%- include('footer.ejs') %>
<script>
    //total user
    // total resources
    fetch(`/AdminPanel/Results`)
        .then(res => res.json())
        .then(data=> {
            document.getElementById('users').innerHTML = data.users;
            document.getElementById('resources').innerHTML = data.contents;
        })
</script>

</body>

</html>
