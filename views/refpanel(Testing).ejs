<!DOCTYPE html>
<html lang="en" class="h-full">
<head>
    <meta charset="UTF-8">
    <title>Admin Panel</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="h-full bg-gray-100 text-gray-800">

<!-- Container -->
<div class="flex h-screen">

    <!-- Sidebar -->
    <aside class="w-64 bg-white shadow-md hidden md:block">
        <div class="p-4 text-xl font-bold border-b">Admin Panel</div>
        <nav class="p-4 space-y-2">
            <a href="#" class="block px-4 py-2 rounded hover:bg-gray-200">Dashboard</a>
            <a href="#" class="block px-4 py-2 rounded hover:bg-gray-200">Users</a>
            <a href="#" class="block px-4 py-2 rounded hover:bg-gray-200">Resources</a>
            <a href="#" class="block px-4 py-2 rounded hover:bg-gray-200">Reports</a>
            <a href="#" class="block px-4 py-2 rounded hover:bg-gray-200">Settings</a>
        </nav>
    </aside>

    <!-- Main Content -->
    <div class="flex-1 flex flex-col">

        <!-- Top Bar -->
        <header class="bg-white shadow p-4 flex justify-between items-center">
            <div class="text-lg font-semibold">Dashboard</div>
            <div class="space-x-4 flex items-center">
                <span class="text-sm">Admin</span>
                <button class="bg-red-500 text-white px-3 py-1 rounded hover:bg-red-600">Logout</button>
            </div>
        </header>

        <!-- Dashboard Content -->
        <main class="p-6 space-y-6 overflow-auto">
            <section class="grid grid-cols-1 md:grid-cols-3 gap-6">
                <div class="bg-white p-4 rounded-xl shadow text-center">
                    <h3 class="text-lg font-semibold">Users</h3>
                    <p class="text-2xl mt-2 font-bold">128</p>
                </div>
                <div class="bg-white p-4 rounded-xl shadow text-center">
                    <h3 class="text-lg font-semibold">Resources</h3>
                    <p class="text-2xl mt-2 font-bold">243</p>
                </div>
                <div class="bg-white p-4 rounded-xl shadow text-center">
                    <h3 class="text-lg font-semibold">Reports</h3>
                    <p class="text-2xl mt-2 font-bold">12</p>
                </div>
            </section>

            <!-- Table Example -->
            <section class="bg-white p-4 rounded-xl shadow overflow-x-auto">
                <h2 class="text-lg font-semibold mb-4">Recent Users</h2>
                <table class="min-w-full text-sm">
                    <thead class="bg-gray-100 text-left">
                    <tr>
                        <th class="p-2">Name</th>
                        <th class="p-2">Email</th>
                        <th class="p-2">Role</th>
                        <th class="p-2">Joined</th>
                        <th class="p-2">Action</th>
                    </tr>
                    </thead>
                    <tbody>
                    <tr class="border-t hover:bg-gray-50">
                        <td class="p-2">Jane Doe</td>
                        <td class="p-2">jane@example.com</td>
                        <td class="p-2">Student</td>
                        <td class="p-2">2025-05-20</td>
                        <td class="p-2">
                            <button class="text-blue-600 hover:underline">Edit</button>
                        </td>
                    </tr>
                    <!-- more rows -->
                    </tbody>
                </table>
            </section>
        </main>
    </div>
</div>
</body>
</html>