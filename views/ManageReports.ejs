<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>Reports & Feedback | Sem-Store Admin</title>
    <link href="/src/new.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet" />
</head>

<body class="min-h-screen bg-[#eaf4f4] font-[Poppins] text-gray-800 flex flex-col">
<%- include('navbar.ejs') %>

<main class="flex-grow p-10">
    <h1 class="text-3xl font-bold text-blue-700 text-center mb-8">Reports & Feedback</h1>

    <div class="overflow-x-auto bg-white shadow rounded-xl max-w-6xl mx-auto">
        <table class="min-w-full text-sm text-left">
            <thead class="bg-blue-100 text-blue-700 uppercase text-xs">
            <tr>
                <th class="px-6 py-3">User</th>
                <th class="px-6 py-3">Type</th>
                <th class="px-6 py-3">Message</th>
                <th class="px-6 py-3">Submitted At</th>
                <th class="px-6 py-3">Actions</th>
            </tr>
            </thead>
            <tbody class="divide-y divide-gray-200">
            <% //feedbacks.forEach(item => { %>
                <tr class="hover:bg-gray-50">
                    <td class="px-6 py-4 font-medium"><%= //item.userName %> (<%= //item.userEmail %>)</td>
                    <td class="px-6 py-4"><%= //item.type %></td>
                    <td class="px-6 py-4 max-w-sm truncate" title="<%= //item.message %>"><%= //item.message %></td>
                    <td class="px-6 py-4"><%=// new Date(item.createdAt).toLocaleString() %></td>
                    <td class="px-6 py-4 space-x-2">
                        <% //if (!item.resolved) { %>
                            <button onclick="resolveReport('<%= //item._id %>')" class="bg-green-600 hover:bg-green-700 text-white px-3 py-1 rounded-md">Resolve</button>
                        <% //} %>
                        <button onclick="deleteReport('<%= //item._id %>')" class="bg-red-500 hover:bg-red-600 text-white px-3 py-1 rounded-md">Delete</button>
                    </td>
                </tr>
            <%//}) %>
            </tbody>
        </table>
    </div>
</main>

<%- include('footer.ejs') %>

<script>
    function resolveReport(id) {
        if (confirm("Mark this report as resolved?")) {
            fetch(`/admin/reports/${id}/resolve`, { method: 'POST' })
                .then(() => location.reload());
        }
    }

    function deleteReport(id) {
        if (confirm("Are you sure you want to delete this report?")) {
            fetch(`/admin/reports/${id}/delete`, { method: 'DELETE' })
                .then(() => location.reload());
        }
    }
</script>
</body>
</html>
