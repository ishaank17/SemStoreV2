<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>Reports & Feedback | Admin</title>
    <link href="/src/new.css" rel="stylesheet"/>
    <link rel="icon" type="image/png" href="/icons/favicon-96x96.png" />
    <link rel="shortcut icon" href="/icons/favicon.ico" />
    <link rel="apple-touch-icon" href="/icons/apple-touch-icon.png" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet"/>
</head>

<body class="bg-[#eaf4f4] font-[Poppins] min-h-screen text-gray-800 flex flex-col">
<%- include('navbar.ejs') %>

<main class="flex-grow p-6  mx-auto">
    <h1 class="text-3xl font-bold text-blue-700 text-center mb-8">Manage Reports & Feedback</h1>

    <% if (reports.length === 0) { %>
        <p class="text-center text-gray-600">No reports to show üéâ</p>
    <% } else { %>
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
            <% reports.forEach(report => { %>
                <div class="bg-white shadow-md rounded-xl p-5 flex flex-col h-full">
                    <!-- Header -->
                    <div class="mb-3 space-y-1">
                        <h2 class="text-lg font-semibold text-gray-800">üìÅ Resource: <%= report.resourceTitle %></h2>
                        <p class="text-sm text-gray-600">By: <span class="text-blue-600 font-medium"><%= report.reportedByEmail %></span></p>
                        <p class="text-sm text-gray-600">Reason: <span class="text-red-600 font-medium"><%= report.reason %></span></p>
                    </div>

                    <!-- Meta Info -->
                    <div class="flex justify-between items-center text-sm text-gray-500 mb-3">
                        <%if(report.status==='Pending'){%><span class="bg-yellow-100 text-yellow-700 px-2 py-1 rounded-full text-xs font-medium">Pending</span><%}%>
                        <%if(report.status==='Resolved'){%><span class="bg-green-100 text-green-700 px-2 py-1 rounded-full text-xs font-medium">Resolved</span><%}%>
                        <span><%= report.createdAt.toLocaleString() %></span>
                    </div>

                    <!-- Description -->
                    <p class="text-sm text-gray-700 mb-4 flex-1"><%= report.description %></p>

                    <!-- Admin Reply Form -->
                    <% if (report.status !== 'Resolved') { %>
                        <form action="/AdminPanel/Reports/<%= report._id %>/reply" method="POST" class="space-y-3">
                            <div>
                                <label for="reply-<%= report._id %>" class="block text-sm font-semibold text-gray-700 mb-1">Reply:</label>
                                <textarea
                                        id="reply-<%= report._id %>"
                                        name="reply"
                                        rows="3"
                                        class="w-full border border-gray-300 rounded-md p-2 text-sm focus:ring-2 focus:ring-blue-500 focus:outline-none"
                                        placeholder="Write your response to the reporter..."
                                ></textarea>
                            </div>

                            <div class="flex gap-2 flex-wrap">
                                <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-md text-sm">Send Reply</button>
                                <button formaction="/AdminPanel/Reports/<%= report._id %>/resolve" formmethod="POST" class="bg-green-600 hover:bg-green-700 text-white px-4 py-2 rounded-md text-sm">Mark as Resolved</button>
                                <button formaction="/AdminPanel/Reports/<%= report._id %>/delete-resource" formmethod="POST" class="bg-red-500 hover:bg-red-600 text-white px-4 py-2 rounded-md text-sm">Delete Resource</button>
                            </div>
                        </form>
                    <% } else { %>
                        <div class="">
                            <label class="block text-sm font-semibold text-gray-700 mb-1" for="reply">Reply (Sent):</label>
                            <textarea
                                    disabled
                                    id="reply"
                                    class="w-full  cursor-not-allowed resize-none border bg-gray-200 border-gray-300 rounded-md p-2 text-sm focus:ring-2 focus:ring-blue-500 focus:outline-none"
                                    rows="3"
                                    placeholder="Write your response..."
                            ><%= report.reply || "No reply given." %></textarea>
                        </div>
                    <% } %>
                </div>
            <% }) %>
        </div>
    <% } %>
</main>

<%- include('footer.ejs') %>
</body>
</html>



