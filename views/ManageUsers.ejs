<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Manage Users | Sem-Store Admin</title>
    <link href="/src/new.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet" />
</head>

<body class="min-h-screen bg-[#eaf4f4] font-[Poppins] text-gray-800 flex flex-col">
<%- include('navbar.ejs') %>

<main class="flex-grow  p-10">
    <h1 class="text-3xl font-bold text-center    text-blue-700 mb-6">Manage Users</h1>

    <div class="overflow-x-auto mx-auto  bg-white shadow rounded-xl">
            <table class="w-full text-sm text-left  overflow-x-auto">
            <thead class="bg-blue-100 text-blue-700 uppercase text-xs">
            <tr>
                <th class="px-6 py-3">Name</th>
                <th class="px-6 py-3">Email</th>
                <th class="px-6 py-3">Role</th>
                <th class="px-6 py-3">Actions</th>
            </tr>
            </thead>
            <tbody class="divide-y divide-gray-200">
            <% users.forEach(user => { %>
                <tr class="hover:bg-gray-50">
                    <td class="px-6 py-4 font-medium"><%= user.name %></td>
                    <td class="px-6 py-4"><%= user.email %></td>
                    <td class="px-6 py-4"><%= user.role %></td>
                    <td class="px-6 py-4">
                        <div class="flex flex-wrap gap-3 whitespace-nowrap">
                        <% if (user.role !== 'Owner') { %>
                            <button onclick="promoteUser('<%= user._id %>')" class="bg-green-600 hover:bg-green-700 text-white px-3 py-1 rounded-md">Promote</button>
                        <% } %>
                        <% if (user.role === 'Contributor'|| user.role === 'Admin') { %>
                            <button onclick="demoteUser('<%= user._id %>')" class="bg-yellow-500 hover:bg-yellow-600 text-white px-3 py-1 rounded-md">Demote</button>
                        <% } %>
                        <% if (user.role !== 'Owner') { %>
                            <button onclick="deleteUser('<%= user._id %>')" class="bg-red-500 hover:bg-red-600 text-white px-3 py-1 rounded-md">Delete</button>
                        <% } %>
                        </div>
                    </td>
                </tr>
            <% }) %>
            </tbody>
        </table>
    </div>
</main>

<%- include('footer.ejs') %>

<script>
    function promoteUser(id) {
        if (confirm("Are you sure you want to Promote this user?")) {
            fetch(`/admin/users/${id}/promote`, {method: 'POST'})
                .then(() => location.reload());
        }
    }

    function demoteUser(id) {
        fetch(`/admin/users/${id}/demote`, { method: 'POST' })
            .then(() => location.reload());
    }

    function deleteUser(id) {
        if (confirm("Are you sure you want to delete this user?")) {
            fetch(`/admin/${id}/demote`, { method: 'POST' })
                .then(() => location.reload());
        }
    }
</script>
</body>
</html>
